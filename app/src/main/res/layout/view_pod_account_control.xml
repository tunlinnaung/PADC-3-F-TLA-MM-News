<?xml version="1.0" encoding="utf-8"?>
<xyz.tunlinaung.news.viewpods.AccountControlViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_profile_view_pod_height">

    <!-- put Z order-->
    <!-- login view pod first, before login view pod second-->
    <include
        android:id="@+id/vp_login_user"
        layout="@layout/view_pod_login_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include
        android:id="@+id/vp_before_login"
        layout="@layout/view_pod_before_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</xyz.tunlinaung.news.viewpods.AccountControlViewPod>
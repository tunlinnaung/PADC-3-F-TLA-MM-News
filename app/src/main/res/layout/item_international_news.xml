<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_international_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:descendantFocusability="afterDescendants">

    <FrameLayout
        android:id="@+id/fl_header_portion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headlines"
            android:textColor="@color/primary_text"
            android:textSize="36sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_access_time_24dp"
            android:layout_gravity="center|end"
            android:drawablePadding="2dp"
            android:text="09:40 PM" />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_international_news_item"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_margin="8dp"
        android:layout_below="@id/fl_header_portion"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headlines"
            android:textColor="@color/accent"
            android:textSize="36sp"
            android:textStyle="bold"
            />

    </android.support.v7.widget.CardView>

</RelativeLayout>
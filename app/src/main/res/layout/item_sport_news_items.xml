<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sport_news_item_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_sport_new_subitem_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/coutinho"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_sport_new_subitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Real Madrid dominate Champion League Team"
        android:layout_toRightOf="@id/iv_sport_new_subitem_image"
        android:layout_marginLeft="12dp"
        android:textSize="16dp"
        android:textColor="@color/primary_text"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_sport_new_subitem_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onefootball"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_sport_new_subitem_image"
        android:layout_alignLeft="@id/tv_sport_new_subitem_title"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:drawableLeft="@drawable/ic_brightness_7_16dp"
        android:drawablePadding="8dp"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<xyz.tunlinaung.news.viewpods.LoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_profile_view_pod_height">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_background"
        android:scaleType="centerCrop"
        />
    
    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/regular_user_profile"
        android:layout_height="@dimen/regular_user_profile"
        android:src="@drawable/dummy_user_picture"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        />

    <TextView
        android:id="@+id/tv_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tun Lin Aung"
        android:layout_below="@id/iv_user_icon"
        android:layout_alignLeft="@id/iv_user_icon"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular"
        />

    <TextView
        android:id="@+id/tv_login_phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+959450042454"
        android:layout_below="@id/tv_login_username"
        android:layout_alignLeft="@id/tv_login_username"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/white_full"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_logout"
        style="@style/accent_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium_2"
        />

</xyz.tunlinaung.news.viewpods.LoginUserViewPod>
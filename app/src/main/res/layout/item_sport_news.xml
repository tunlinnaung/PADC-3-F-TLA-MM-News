<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sport_news_item_root"
    android:layout_width="match_parent"
    android:layout_height="720dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/tv_sport_new_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top News"
                android:padding="12dp"
                android:drawableLeft="@drawable/ic_group_work_28dp"
                android:drawablePadding="8dp"
                />

            <ImageView
                android:id="@+id/iv_sport_new_item_cover"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:src="@drawable/coutinho"
                android:scaleType="centerCrop"
                android:layout_below="@id/tv_sport_new_item_category"
                />

            <TextView
                android:id="@+id/tv_sport_new_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liverpool contact Arsenal to hijack Alexis Sanchez deal to come"
                android:layout_below="@id/iv_sport_new_item_cover"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:lineSpacingMultiplier="1.2"
                />

            <TextView
                android:id="@+id/tv_sport_new_item_app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onefootball"
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:drawableLeft="@drawable/ic_brightness_7_16dp"
                android:drawablePadding="8dp"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sport_news_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>
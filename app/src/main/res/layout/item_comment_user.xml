<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="@dimen/regular_user_profile"
        android:layout_height="@dimen/regular_user_profile"
        android:src="@drawable/dummy_user_picture"
        />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Tun Lin Aung"
        android:layout_toRightOf="@id/iv_user_profile"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold"
        />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Dummy comment message Dummy"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_user_profile"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:paddingBottom="@dimen/margin_medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.8"
        />

    <TextView
        android:id="@+id/tv_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="6:45 AM, Feb 3rd 2018"
        android:layout_below="@id/tv_comment"
        android:layout_toRightOf="@id/iv_user_profile"
        android:layout_alignBottom="@id/iv_user_profile"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sender_profile"
            android:layout_width="@dimen/regular_user_profile"
            android:layout_height="@dimen/regular_user_profile"
            android:src="@drawable/dummy_user_picture"
            />

        <net.aungpyaephyo.mmtextview.components.MMTextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tun Lin Aung"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_sender_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:45 AM, Feb 3rd 2018"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_send_icon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:layout_weight="1"
        android:src="@drawable/ic_send_24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_medium_2">

        <ImageView
            android:id="@+id/iv_receiver_profile"
            android:layout_width="@dimen/regular_user_profile"
            android:layout_height="@dimen/regular_user_profile"
            android:src="@drawable/dummy_user_picture"
            />

        <net.aungpyaephyo.mmtextview.components.MMTextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tun Lin Aung"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_receiver_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:45 AM, Feb 3rd 2018"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular"
            />

    </LinearLayout>

</LinearLayout>